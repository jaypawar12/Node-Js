<%- include('../header') %>

<div class="main-content position-relative max-height-vh-100 h-100">
  <div class="container-fluid px-2 px-md-4">

    <!-- Header Banner -->
    <div class="page-header min-height-300 border-radius-xl mt-4"
      style="background-image: url('https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=1920&q=80'); background-size: cover;">
      <span class="mask bg-gradient-dark opacity-6"></span>
    </div>

    <!-- Edit Admin Card -->
    <div class="card shadow-lg border-0 mx-4 mt-n6 bg-light">
      <div class="card-body px-4 py-5">
        <div class="row justify-content-center">
          <div class="col-md-10 col-lg-8">

            <h4 class="text-center text-dark mb-4 fw-bold">
              <i class="fas text-dark fa-user-edit me-2"></i>Edit Admin
            </h4>

            <form method="post" action="/updateAdmin/<%= record._id %>" enctype="multipart/form-data">

              <!-- First Name -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-user me-2 text-dark"></i>First Name</label>
                <input type="text" name="adminFname" class="form-control p-2 shadow-sm custom-bg border-0"
                  value="<%= record?.adminFname || '' %>" placeholder="Enter first name" required>
              </div>

              <!-- Last Name -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-user me-2 text-dark"></i>Last Name</label>
                <input type="text" name="adminLname" class="form-control p-2 shadow-sm custom-bg border-0"
                  value="<%= record?.adminLname || '' %>" placeholder="Enter last name" required>
              </div>

              <!-- Email -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-envelope me-2 text-dark"></i>Email</label>
                <input type="email" name="adminEmail" class="form-control p-2 shadow-sm custom-bg border-0"
                  value="<%= record?.adminEmail || '' %>" placeholder="Enter email" required>
              </div>

              <!-- Function -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-briefcase me-2 text-dark"></i>Function</label>
                <select name="adminFunction" class="form-select p-2 shadow-sm custom-bg border-0" required>
                  <option value="" hidden>-- Select Function --</option>
                  <% const functions = ["Manager", "HR", "Web-Developer", "Application-Developer", "UI/UX Designer", "Project Coordinator", "QA Engineer", "DevOps Engineer", "Database Administrator"]; %>
                  <% functions.forEach(func => { %>
                    <option value="<%= func %>" <%= record?.adminFunction === func ? 'selected' : '' %>><%= func %></option>
                  <% }) %>
                </select>
              </div>

              <!-- Status -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-signal me-2 text-dark"></i>Status</label>
                <select name="adminStatus" class="form-select p-2 shadow-sm custom-bg border-0" required>
                  <option value="" hidden>-- Select Status --</option>
                  <option value="Online" <%= record?.adminStatus === 'Online' ? 'selected' : '' %>>Online</option>
                  <option value="Offline" <%= record?.adminStatus === 'Offline' ? 'selected' : '' %>>Offline</option>
                </select>
              </div>

              <!-- Join Date -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-calendar-alt me-2 text-dark"></i>Join Date</label>
                <input type="date" name="joinDate" class="form-control p-2 shadow-sm custom-bg border-0"
                  value="<%= record?.joinDate || '' %>" required>
              </div>

              <!-- Current Image Preview -->
              <% if (record?.adminImage) { %>
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-image me-2 text-dark"></i>Current Image</label><br>
                <img src="../<%= record.adminImage %>" class="img-fluid rounded shadow" style="max-height: 120px;">
              </div>
              <% } %>

              <!-- Image Upload -->
              <div class="form-group mb-4">
                <label class="form-label fw-semibold"><i class="fas fa-upload me-2 text-dark"></i>Upload New Image</label>
                <input type="file" name="adminImage" class="form-control p-2 shadow-sm custom-bg border-0">
              </div>

              <!-- Submit Button -->
              <div class="text-center mt-4">
                <button type="submit" class="btn btn-lg bg-gradient-dark text-white px-5 shadow">
                  <i class="fas fa-save me-2"></i>Update Admin
                </button>
              </div>

            </form>

          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="footer py-4 mt-5">
      <div class="container-fluid">
        <div class="row align-items-center justify-content-lg-between">
          <div class="col-lg-6 mb-lg-0 mb-4 text-center text-muted text-sm text-lg-start">
            Â© <script>document.write(new Date().getFullYear())</script>,
            made with <i class="fa fa-heart text-primary"></i> by Creative Tim
          </div>
          <div class="col-lg-6">
            <ul class="nav nav-footer justify-content-center justify-content-lg-end">
              <li class="nav-item"><a href="#" class="nav-link text-muted">Creative Tim</a></li>
              <li class="nav-item"><a href="#" class="nav-link text-muted">About Us</a></li>
              <li class="nav-item"><a href="#" class="nav-link text-muted">Blog</a></li>
              <li class="nav-item"><a href="#" class="nav-link pe-0 text-muted">License</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

  </div>
</div>

<%- include('../footer') %>

