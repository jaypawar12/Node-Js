  .fancy-input {
    background-color: #eef4fa !important;
    border-radius: 10px;
    border: 1px solid #dbe2ef;
    padding: 10px 15px;
    transition: all 0.3s ease;
  }

  .fancy-input:focus {
    border-color: #5e72e4;
    box-shadow: 0 0 0 0.15rem rgba(94, 114, 228, 0.25);
    background-color: #fff;
  }

  .btn-gradient-primary {
    background-image: linear-gradient(310deg, #5e72e4, #825ee4);
    color: #fff;
    border: none;
  }

  .btn-gradient-primary:hover {
    background-image: linear-gradient(310deg, #4e62d4, #704ed4);
  }
</style>
