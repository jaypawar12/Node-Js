<%- include('../header') %>

    <div class="container py-5">
        <h2 class="text-center mb-5 fw-bold text-primary">
            <i class="fas fa-th-list me-2"></i>All Categories
        </h2>

        <div class="row g-4">
            <% if (categories.length> 0) { %>
                <% categories.forEach((cat)=> { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm h-100 border-0">
                            <!-- Category Image -->
                            <img src="/uploads/<%= cat.categoryImage %>" class="card-img-top rounded-top"
                                style="height: 200px; object-fit: cover;" alt="Category Image">

                            <!-- Card Body -->
                            <div class="card-body p-4">
                                <h5 class="card-title fw-bold text-primary">
                                    <%= cat.categoryName %>
                                </h5>
                                <p class="card-text text-muted">
                                    <%= cat.categoryDescription %>
                                </p>

                                <!-- Status -->
                                <span class="badge bg-<%= cat.categoryStatus === 'Active' ? 'success' : 'danger' %>">
                                    <%= cat.categoryStatus %>
                                </span>
                            </div>

                            <!-- Card Footer -->
                            <div class="card-footer d-flex justify-content-between p-3 border-top-0">
                                <a href="/editCategory/<%= cat._id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a href="/deleteCategory/<%= cat._id %>" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="col-12 text-center">
                                <h5 class="text-muted">No categories found. Please add one!</h5>
                            </div>
                            <% } %>
        </div>
    </div>

    <%- include('../footer') %>