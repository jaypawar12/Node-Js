<%- include('../header') %>

    <style>
        .card-extra {
            transition: 0.3s ease;
            border-radius: 15px;
        }

        .card-extra:hover {
            transform: translateY(-6px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .extra-badge {
            font-size: 0.85rem;
        }

        .modal-content {
            border-radius: 20px;
        }

        .modal-header {
            border-bottom: none;
            background: linear-gradient(to right, #343a40, #212529);
        }

        .modal-footer {
            border-top: none;
        }

        .info-icon {
            margin-right: 6px;
        }

        .text-muted-sm {
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-dark mb-0">
                <i class="fas fa-layer-group me-2"></i>All Extra Categories
            </h3>
            <a href="/extraCategory/addExtraCategoryPage" class="btn btn-dark shadow">
                <i class="fas fa-plus-circle me-2"></i>Add Extra Category
            </a>
        </div>

        <div class="row g-4">
            <% if (extraCategory && extraCategory.length> 0) { %>
                <% extraCategory.forEach(extra=> { %>
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card shadow-sm border-0 card-extra h-100" data-bs-toggle="modal"
                            data-bs-target="#extraCategoryModal<%= extra._id %>">
                            <img src="../<%= extra.extraCategory_image %>" class="img-fluid rounded-top"
                                style="height: 180px; object-fit: cover;" />
                            <div class="card-body text-center">
                                <h5 class="card-title text-primary mb-2">
                                    <%= extra.extraCategory_name %>
                                </h5>
                                <div class="mb-2">
                                    <span
                                        class="badge extra-badge <%= extra.extraCategory_status === 'Active' ? 'bg-success' : 'bg-danger' %>">
                                        <%= extra.extraCategory_status %>
                                    </span>
                                </div>
                                <div class="text-muted-sm text-dark">
                                    <i class="fas fa-tag info-icon"></i>Category:
                                    <%= extra.category_id?.category_name %>
                                </div>
                                <div class="text-muted-sm text-dark">
                                    <i class="fas fa-sitemap info-icon"></i>SubCategory:
                                    <%= extra.subCategory_id.subCategory_name %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="extraCategoryModal<%= extra._id %>" tabindex="-1"
                        aria-labelledby="modalLabel<%= extra._id %>" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content rounded-4 shadow-lg">
                                <div class="modal-header text-white">
                                    <h5 class="modal-title text-white d-flex align-items-center"
                                        id="modalLabel<%= extra._id %>">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <%= extra.extraCategory_name %>
                                    </h5>
                                    <button type="button" class="btn-close text-white   " data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row g-4">
                                        <!-- Image Section -->
                                        <div class="col-md-5 text-center">
                                            <img src="../<%= extra.extraCategory_image %>" alt="Extra Category Image"
                                                class="img-fluid rounded shadow"
                                                style="max-height: 250px; object-fit: cover;" />
                                        </div>

                                        <!-- Info Section -->
                                        <div class="col-md-7">
                                            <p><strong><i class="fas fa-tags me-2 text-dark"></i>Category:</strong>
                                                <%= extra.category_id?.category_name %>
                                            </p>
                                            <p><strong><i
                                                        class="fas fa-sitemap me-2 text-dark"></i>SubCategory:</strong>
                                                <%= extra.subCategory_id?.subCategory_name %>
                                            </p>
                                            <p><strong><i
                                                        class="fas fa-align-left me-2 text-dark"></i>Description:</strong>
                                                <%= extra.extraCategory_description %>
                                            </p>
                                            <p><strong><i class="fas fa-toggle-on me-2 text-dark"></i>Status:</strong>
                                                <span
                                                    class="badge <%= extra.extraCategory_status === 'Active' ? 'bg-success' : 'bg-danger' %>">
                                                    <%= extra.extraCategory_status %>
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="/extraCategory/editExtraCategoryPage/<%= extra._id %>"
                                        class="btn btn-outline-dark">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a href="/extraCategory/deleteExtraCategory/<%= extra._id %>"
                                        class="btn btn-outline-danger"
                                        onclick="return confirm('Are you sure you want to delete this extra category?')">
                                        <i class="fas fa-trash-alt me-1"></i>Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col-12 text-center">
                                <div class="alert alert-info shadow-sm">
                                    <i class="fas fa-info-circle me-2"></i>No extra categories found.
                                </div>
                            </div>
                            <% } %>
        </div>
    </div>

    <%- include('../footer') %>