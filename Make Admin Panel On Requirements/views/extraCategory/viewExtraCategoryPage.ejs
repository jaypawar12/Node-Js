<%- include('../header') %>

    <div class="container-fluid py-4">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div
                    class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center px-3">
                    <h6 class="text-white text-capitalize mb-0">Extra Category Table</h6>
                    <a href="/extraCategory/addExtraCategoryPage" class="btn btn-light btn-md">
                        <i class="fas fa-plus-circle me-2"></i>Add Extra Category
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-3">
                    <% if (extraCategory && extraCategory.length> 0) { %>
                        <table class="table align-items-center mb-0 table-hover text-sm">
                            <thead class="bg-light">
                                <tr>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder rounded-start">Image</th>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder">Name</th>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder">Category</th>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder">SubCategory
                                    </th>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder">Description
                                    </th>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder">
                                        Status</th>
                                    <th class="text-uppercase text-secondary text-sm text-center font-weight-bolder rounded-end">
                                        Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% extraCategory.forEach(extra=> { %>
                                    <tr data-bs-toggle="modal" data-bs-target="#extraCategoryModal<%= extra._id %>">
                                        <td class="text-center">
                                            <img src="../<%= extra.extraCategory_image %>" class="rounded border"
                                                style="width: auto; height: 60px; object-fit: cover;" alt="">
                                        </td>
                                        <td class="text-center">
                                            <%= extra.extraCategory_name %>
                                        </td>
                                        <td class="text-center">
                                            <%= extra.category_id?.category_name %>
                                        </td>
                                        <td class="text-center">
                                            <%= extra.subCategory_id?.subCategory_name %>
                                        </td>
                                        <td style="max-width: 250px;" class="text-wrap">
                                            <%= extra.extraCategory_description %>
                                        </td>
                                        <td class="text-center">
                                            <span
                                                class="badge rounded py-2 px-3 <%= extra.extraCategory_status === 'Active' ? 'bg-gradient-success' : 'bg-gradient-danger' %>">
                                                <%= extra.extraCategory_status %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-2">
                                                <a href="/extraCategory/editExtraCategoryPage/<%= extra._id %>"
                                                    class="btn btn-outline-dark btn-md" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/extraCategory/deleteExtraCategory/<%= extra._id %>"
                                                    class="btn btn-outline-danger btn-md"
                                                    onclick="return confirm('Are you sure you want to delete this extra category?');"
                                                    title="Delete">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="extraCategoryModal<%= extra._id %>" tabindex="-1"
                                        aria-labelledby="modalLabel<%= extra._id %>" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content rounded-4 shadow-lg">
                                                <div class="modal-header text-white bg-dark">
                                                    <h5 class="modal-title text-white d-flex align-items-center"
                                                        id="modalLabel<%= extra._id %>">
                                                        <i class="fas fa-info-circle me-2"></i>
                                                        <%= extra.extraCategory_name %>
                                                    </h5>
                                                    <button type="button" class="btn-close text-white"
                                                        data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row g-4">
                                                        <div class="col-md-5 text-center">
                                                            <img src="../<%= extra.extraCategory_image %>"
                                                                alt="Extra Category Image"
                                                                class="img-fluid rounded shadow"
                                                                style="max-height: 250px; object-fit: cover;" />
                                                        </div>
                                                        <div class="col-md-7">
                                                            <p><strong>Category:</strong>
                                                                <%= extra.category_id?.category_name %>
                                                            </p>
                                                            <p><strong>SubCategory:</strong>
                                                                <%= extra.subCategory_id?.subCategory_name %>
                                                            </p>
                                                            <p><strong>Description:</strong>
                                                                <%= extra.extraCategory_description %>
                                                            </p>
                                                            <p><strong>Status:</strong>
                                                                <span
                                                                    class="badge <%= extra.extraCategory_status === 'Active' ? 'bg-success' : 'bg-danger' %>">
                                                                    <%= extra.extraCategory_status %>
                                                                </span>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <a href="/extraCategory/editExtraCategoryPage/<%= extra._id %>"
                                                        class="btn btn-outline-dark">
                                                        <i class="fas fa-edit me-1"></i>Edit
                                                    </a>
                                                    <a href="/extraCategory/deleteExtraCategory/<%= extra._id %>"
                                                        class="btn btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this extra category?')">
                                                        <i class="fas fa-trash-alt me-1"></i>Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } else { %>
                            <div class="text-center py-5">
                                <div class="alert alert-info shadow-sm">
                                    <i class="fas fa-info-circle me-2"></i>No extra categories found.
                                </div>
                            </div>
                            <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>