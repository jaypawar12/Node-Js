<%- include('header') %>

<div class="card-body m-4">
  <form action="/adminInset" method="post" enctype="multipart/form-data">
    <div class="input-group input-group-outline mb-3">
      <label class="form-label">First Name</label>
      <input type="text" name="adminFname" class="form-control">
    </div>

    <div class="input-group input-group-outline mb-3">
      <label class="form-label">Last Name</label>
      <input type="text" name="adminLname" class="form-control">
    </div>

    <div class="input-group input-group-outline mb-3">
      <label class="form-label">Email</label>
      <input type="email" name="adminEmail" class="form-control">
    </div>

    <div class="input-group input-group-outline mb-3">
      <select name="adminFunction" class="form-control">
        <option hidden>--Select Your Function--</option>
        <% let adminFunction = ["Manager", "HR", "Web-Developer", "Application-Developer"]; %>
        <% adminFunction.forEach((data) => { %>
          <option value="<%= data %>"><%= data %></option>
        <% }); %>
      </select>
    </div>

    <div class="input-group input-group-outline mb-3">
      <input type="date" name="joinDate" class="form-control">
    </div>

    <div class="input-group input-group-outline mb-2">
      <input type="file" name="adminImage" class="form-control">
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-lg bg-gradient-dark btn-lg w-100 mt-2 mb-0">Add Admin</button>
    </div>
  </form>
</div>

<%- include('footer') %>
